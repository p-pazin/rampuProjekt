<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_marka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Marka"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/sp_marka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/edit_textbox"
                    android:textColor="@color/textColorLight"
                    android:popupBackground="@color/primaryColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_marka" />

                <TextView
                    android:id="@+id/tv_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Model"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sp_marka" />

                <Spinner
                    android:id="@+id/sp_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/edit_textbox"
                    android:popupBackground="@color/primaryColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_model" />

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Tip"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sp_model" />


                <EditText
                    android:id="@+id/et_tip"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="Sedan"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/textColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tip" />

                <TextView
                    android:id="@+id/tv_godina_proizvodnje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Godina proizvodnje"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_tip" />

                <EditText
                    android:id="@+id/et_god_proizv"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="2024"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/textColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_godina_proizvodnje" />

                <TextView
                    android:id="@+id/tv_registracija"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Registracija"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_god_proizv" />

                <EditText
                    android:id="@+id/et_registracija"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="ZG123AB"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/textColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_registracija" />

                <TextView
                    android:id="@+id/tv_kilometri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="?attr/colorOnBackground"
                    android:text="Prijeđeni kilometri"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_registracija" />

                <TextView
                    android:id="@+id/tv_motor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Motor"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sp_gearbox" />

                <EditText
                    android:id="@+id/et_motor"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="1.4"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/textColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_motor" />

                <EditText
                    android:id="@+id/et_enginePower"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="135"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/textColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_engine_power" />

                <TextView
                    android:id="@+id/tv_engine_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Snaga motora"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_motor" />

                <TextView
                    android:id="@+id/tv_usage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Upotreba"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_condition" />

                <Spinner
                    android:id="@+id/sp_usage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/edit_textbox"
                    android:popupBackground="@color/primaryColorLight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_usage" />

                <TextView
                    android:id="@+id/tv_cijena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Cijena"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sp_usage" />

                <EditText
                    android:id="@+id/et_cijena"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="999999"
                    android:textColor="@color/textColorLight"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cijena" />

                <EditText
                    android:id="@+id/et_kilometri"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="99999"
                    android:inputType="number"
                    android:textColor="@color/textColorLight"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_kilometri" />

                <TextView
                    android:id="@+id/tv_cubic_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Kubikaža"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_kilometri" />

                <EditText
                    android:id="@+id/et_cubic_capacity"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="1600"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/textColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cubic_capacity" />

                <TextView
                    android:id="@+id/tv_registered_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Registrirano do"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_cubic_capacity" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:calendarViewShown="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_registered_to" />


                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Boja"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/datePicker" />

                <EditText
                    android:id="@+id/et_color"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="Crvena"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/textColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_color" />

                <TextView
                    android:id="@+id/tv_drive_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Pogon"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_color" />

                <EditText
                    android:id="@+id/et_drive_type"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="Prednji"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/textColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_drive_type" />

                <TextView
                    android:id="@+id/tv_gearbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Mjenjač"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_drive_type" />

                <Spinner
                    android:id="@+id/sp_gearbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:popupBackground="@color/primaryColorLight"
                    android:minHeight="48dp"
                    android:background="@drawable/edit_textbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_gearbox" />

                <TextView
                    android:id="@+id/tv_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Stanje"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_enginePower" />

                <EditText
                    android:id="@+id/et_condition"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_textbox"
                    android:ems="10"
                    android:hint="Kao novo"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/textColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_condition" />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnSpremi"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="@color/accentColorLight"
                    android:text="@string/spremi"
                    android:textColor="@color/textColorDark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
