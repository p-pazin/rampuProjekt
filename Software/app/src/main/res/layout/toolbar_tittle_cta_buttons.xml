<?xml version="1.0" encoding="utf-8"?>
<Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_tittle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentInsetStart="4dp"
    android:contentInsetEnd="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolcl">

        <ImageButton
            android:id="@+id/btnDodaj"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="Dodaj"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/toolcl"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_dodaj" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</Toolbar>